<metal:block use-macro="here/global_defines/macros/defines" />
<div class="teaser_portlet" tal:define="teasertitle view/getTeaserTitle;
                 teaserdesc view/getTeaserDesc;
                 internal_target nocall:view/internal_obj;
                 image view/image_tag;
                 ">
    <h2>
    	<a tal:attributes="href python:internal_target.absolute_url()">
             <tal:img replace="structure image" />
    	    <span class="teaser_title" tal:replace="structure teasertitle" />
    	</a>
    </h2>
    <p class="homeFeature"
       tal:content="structure teaserdesc">
       Beschrieb
    </p>
</div>
