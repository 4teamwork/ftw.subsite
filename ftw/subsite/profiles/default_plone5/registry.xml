<?xml version="1.0"?>
<registry>

  <record name="ftw.subsite.banner_root_only">
      <field type="plone.registry.field.Bool">
          <title>Show banners only on root or everywhere</title>
      </field>
      <value>True</value>
  </record>

  <record name="ftw.subsite.bannerfoldername">
      <field type="plone.registry.field.TextLine">
          <title>Name of folder where banners are stored</title>
      </field>
      <value>banners</value>
  </record>

    <records prefix="plone.resources/subsite_css"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="css">
            <element>++resource++ftw.subsite-ressources/subsite.css</element>
        </value>
    </records>

    <records prefix="plone.bundles/ftw-subsite-resources"
             interface='Products.CMFPlone.interfaces.IBundleRegistry'>
        <value key="resources">
            <element>subsite_css</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="csscompilation">++plone++subsite/ftw-subsite-compiled.css</value>
        <value key="merge_with">default</value>
    </records>

</registry>
